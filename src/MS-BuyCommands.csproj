<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>MS_BuyCommands</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ModSharp.Sharp.Modules.LocalizerManager.Shared" Version="2.1.88" />
    <PackageReference Include="ModSharp.Sharp.Shared" Version="2.1.88" />
  </ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="if exist $(ProjectDir)build rmdir /s/q $(ProjectDir)build" />
		<Exec Command="if not exist $(ProjectDir)build mkdir $(ProjectDir)build" />
		<Exec Command="if not exist $(ProjectDir)build\modules mkdir $(ProjectDir)build\modules" />
		<Exec Command="if not exist $(ProjectDir)build\modules\$(TargetName) mkdir $(ProjectDir)build\modules\$(TargetName)" />
		<Exec Command="copy /Y $(TargetDir)$(TargetName).dll $(ProjectDir)build\modules\$(TargetName)\$(TargetName).dll" />
		<Exec Command="copy /Y $(TargetDir)$(TargetName).deps.json $(ProjectDir)build\modules\$(TargetName)\$(TargetName).deps.json" />

		<Exec Command="if not exist $(ProjectDir)build\modules\$(TargetName)\maps mkdir $(ProjectDir)build\modules\$(TargetName)\maps" />
		<Exec Command="copy /Y $(ProjectDir)\maps\de_dust2.json $(ProjectDir)build\modules\$(TargetName)\maps\de_dust2.json" />

		<Exec Command="if not exist $(ProjectDir)build\modules\$(TargetName)\prefix mkdir $(ProjectDir)build\modules\$(TargetName)\prefix" />
		<Exec Command="copy /Y $(ProjectDir)\prefix\ze.json $(ProjectDir)build\modules\$(TargetName)\prefix\ze.json" />

		<Exec Command="copy /Y $(ProjectDir)\config.json $(ProjectDir)build\modules\$(TargetName)\config.json" />

		<Exec Command="if not exist $(ProjectDir)build\locales mkdir $(ProjectDir)build\locales" />
		<Exec Command="copy /Y $(ProjectDir)BuyCommands.json $(ProjectDir)build\locales\BuyCommands.json" />
	</Target>

</Project>
